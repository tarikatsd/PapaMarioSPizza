{# On vérifie si un mot est contenu dans la route (barre d'adresse) et si c'est le cas on modifie la valeur de la variable concernée #}

{% if "home" in app.request.pathinfo %}
{% set homeActive = "active" %}
{% elseif "carousel" in app.request.pathinfo %}
{% set carouselActive = "active" %}
{% elseif "promo" in app.request.pathinfo %}
{% set promoActive = "active" %}
{% elseif "pizza" in app.request.pathinfo %}
{% set pizzaActive = "active" %}
{% elseif "extra" in app.request.pathinfo %}
{% set extraActive = "active" %}
{% elseif "ingredient" in app.request.pathinfo %}
{% set ingredientActive = "active" %}
{% elseif "dessert" in app.request.pathinfo %}
{% set dessertActive = "active" %}
{% elseif "boisson" in app.request.pathinfo %}
{% set boissonActive = "active" %}
{% elseif "user" in app.request.pathinfo %}
{% set userActive = "active" %}
{% elseif "visite" in app.request.pathinfo %}
{% set visiteActive = "active" %}
{% elseif "resau-social" in app.request.pathinfo %}
{% set resauSocialActive = "active" %}
{% elseif "contact" in app.request.pathinfo %}
{% set contactActive = "active" %}
{% elseif "CGV" in app.request.pathinfo %}
{% set CGVActive = "active" %}
{% elseif "canette" in app.request.pathinfo %}
{% set canetteActive = "active" %}
{% endif %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Papa Mario's Pizza
            {% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/lightbox.min.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="{{ asset('css/style-backend.min.css') }}">
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            {% include 'admin_common/_left-nav.html.twig' %}
            <div class="main">
                {% include 'admin_common/_top-nav.html.twig' %}
                <main class="content">
                    <div class="container-fluid p-0">
                    {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                        {% block body %}{% endblock %}
                    </div>
                </main>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="{{ asset('js/app.js') }}"></script>
        <script src="{{ asset('js/lightbox.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
