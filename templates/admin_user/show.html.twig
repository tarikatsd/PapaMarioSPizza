{% extends 'base-backend.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Verifier</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
                <tr>
                    <th>Adresse</th>
                    {# <td>{{ user.adresse }}</td> #}
                </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">back to list</a

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
