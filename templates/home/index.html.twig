{% extends 'base.html.twig' %}

{% block title %}
    Papa Mario'S Pizza
    
{% endblock %}

{% block body %}
    <h1 class="text-center mt-4 pt-4">
        {% if home.titre is not null %}
            {{ home.titre }}
        {% else %}
            Bienvenue sur Papa Mario'S Pizza
        {% endif %}
    </h1>
        {% if home.imageName is null %}
            <p class="mt-4">
                {{ home.texte }}
            </p>
        {% else %}
            <div class="row mt-2 mb-4">
                <div class="col-12 col-md-9 mx-auto">
                    <div class="mx-auto text-center">
                        <img src="{{ asset('images/home/' ~ home.imageName) }}" alt="{{ home.titre }}" class="img-fluid" style="border-radius: 20px;"></div>
                        <p class="mt-4 text-center">
                            {{ home.texte }}
                        </p>
                    </div>
                </div>
            {% endif %}
        {% endblock %}
        