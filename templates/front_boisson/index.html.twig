{% extends 'base.html.twig' %}

{% block title %}
    Nos Bouteilles
{% endblock %}

{% block body %}
    <h1 class="text-center mt-4">
    <i class="fas fa-wine-bottle me-1"></i>
    Nos Bouteilles
    </h1>
    <div class="container mt-4">
        <div class="row">
            {% for boisson in boissons %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow">
                    <img src="{{ asset('images/boisson/' ~ boisson.imageName) }}" class="card-img-top" alt="{{ boisson.nom }}">
                    <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{ boisson.nom }}</h5>
                        <p>{{ boisson.taille }}cl</p> 
                        </div>
                        <div class="mt-auto d-flex justify-content-between">
                        <span class="badge badge-primary bg-brown" style="display: flex; justify-content: center; align-items: center;">
                        <p class="card-text m-0">
                            {{ boisson.prix }}
                            <i class="fas fa-euro"></i>
                        </p>
                    </span>
                        <button class="btn btn-warning btn-add-boisson" data-boisson-id="{{ boisson.id }}">
                            <i class="fas fa-shopping-cart"></i>
                        </button>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script>
    $(".btn-add-boisson").on("click", function(event){
        event.preventDefault();
        event.stopPropagation();
        let boissonId = $(this).data("boisson-id");
        $.ajax({
            url : "/boisson/panier",
            type: "POST",
            data: {
                boissonId: boissonId,
                },
                }).done(function(response){

                    });
    });

</script>
{% endblock %}