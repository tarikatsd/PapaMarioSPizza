{% extends 'base.html.twig' %}

{% block title %}Nos Extra{% endblock %}

{% block body %}
<div id="success-message" ></div>
    <h1 class="text-center mt-4">
    <i class="fas fa-utensils me-1"></i>
    Nos Extras</h1>
    <div class="container mt-4">
        <div class="row">
            {% for extra in extras %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow">
                    <img src="{{ asset('images/extra/' ~ extra.imageName) }}" class="card-img-top" alt="{{ extra.nom }}">
                    <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{ extra.nom }}</h5>
                        <p class="card-text">{{ extra.prix }} €</p>
                    </div>
                        <div class="mt-auto d-flex justify-content-between">
                        <input type="number" class="quantity" value="1" min="1" max="20" >
                        <button class="btn btn-warning btn-add-extra" data-extra-id="{{ extra.id }}">
                        <i class="fas fa-shopping-cart"></i>
                        </button>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script>
    let quantity = 0;
    $(".btn-add-extra").on("click", function(event){
        quantity = $(this).siblings(".quantity").val();
        if (quantity == 0)  {
            quantity = 1;
        }
        event.preventDefault();
        event.stopPropagation();
        let extraId = $(this).data("extra-id");
        $.ajax({
            url : "/extra/panier",
            type: "POST",
            data: {
                extraId: extraId,
                quantity: quantity,
                },
                }).done(function(response){
                    if (response.success) {
                        $("#success-message").text("L'extra a bien été ajoutée au panier").fadeIn().delay(2000).fadeOut();
                    }
        });
    });

</script>
                {% endblock %}