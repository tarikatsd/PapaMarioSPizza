{% extends 'base.html.twig' %}

{% block title %}Nos Dessert{% endblock %}

{% block body %}
    <h1 class="text-center mt-4">Nos Desserts</h1>
    <div class="container mt-4">
        <div class="row">
            {% for dessert in desserts %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow">
                    <img src="{{ asset('images/dessert/' ~ dessert.imageName) }}" class="card-img-top" alt="{{ dessert.nom }}">
                    <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{ dessert.nom }}</h5>
                        <p class="card-text">{{ dessert.prix }} â‚¬</p>
                    </div>
                        <div class="mt-auto d-flex justify-content-between">
                        <a href="#" class="btn btn-warning"><i class="fas fa-shopping-cart"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}