{% extends 'base-backend.html.twig' %}

{% block title %}Home index{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Home</h1>
    <a href="{{ path('app_admin_home_new') }}" class="btn btn-brown">Nouveau</a></div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                {# <th>Texte</th> #}
                <th>Activée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>
                <a href="{{ asset('images/home/' ~ home.imageName) }}" data-lightbox="{{ home.imageName }}"{% if home.titre is not null%} data-title="{{home.titre}}"{% endif %} >
            <img src="{{ asset('images/home/' ~ home.imageName) }}" alt="{{ home.imageName }}" class="img-list"></a></td>
                <td>{{ home.titre }}</td>
                {# <td>{{ home.texte }}</td> #}
                <td>{{ home.isActive ? 'Oui' : 'Non' }}</td>
                    <td>
                    <a href="{{ path('app_admin_home_show', {'id': home.id}) }}" class="btn btn-orange"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}"class="btn btn-brown" ><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"> <div class="text-start">Acune donnée trouvée</div> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
