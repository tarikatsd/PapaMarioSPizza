{% extends 'base-backend.html.twig' %}

{% block title %}
    Home
{% endblock %}

{% block body %}
<a href="{{ path('app_admin_home_index') }}" class="btn btn-orange btn-sm mb-2">Retour a la liste</a>
<div class="d-flex justify-content-between align-items-center">
<h1>Modifié Home</h1>
    <a class="btn btn-brown" href="{{ path('app_admin_home_edit',{'id': home.id}) }}">
    Modifié Home
</a></div>


    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ home.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ home.texte }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ home.imageName }}</td>
            </tr>
        </tbody>
    </table>


    {{ include('admin_home/_delete_form.html.twig', {'button_label': 'Modifiée'}) }}
{% endblock %}


