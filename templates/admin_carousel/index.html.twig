{% extends 'base-backend.html.twig' %}

{% block title %}
    Carousel
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>
            Carousel 
        </h1>
        <a href="{{ path('app_admin_carousel_new') }}" class="btn btn-brown">
            Nouveau
        </a>
    </div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Ordre</th>
                <th>Tag</th>
                <th>Activée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for carousel in carousels %}
                <tr>
                    <td>
                    <a href="{{ asset('images/carousel/' ~ carousel.imageName) }}" data-lightbox="{{ carousel.imageName }}"{% if carousel.titre is not null%} data-title="{{carousel.titre}}"{% endif %} >
                            <img src="{{ asset('images/carousel/' ~ carousel.imageName) }}" alt="{{ carousel.imageName }}" class="img-list"></a>
                        </td>
                        <td>{{ carousel.titre }}</td>
                        <td>{{ carousel.texte }}</td>
                        <td>{{ carousel.rankNumber }}</td>
                        <td>{{ carousel.tag }}</td>
                        <td>{{ carousel.isActive ? 'Oui' : 'Non' }}</td>
                        
                        <td>
                            <a href="{{ path('app_admin_carousel_show', {'id': carousel.id}) }}" class="btn btn-orange">
                                <i class="align-middle" data-feather="eye"></i>
                            </a>
                            <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-brown">
                                <i class="align-middle" data-feather="edit-2"></i>
                            </a>
                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7"class="text-start">Aucune donnée trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% endblock %}
    