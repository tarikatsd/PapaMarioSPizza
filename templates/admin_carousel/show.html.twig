{% extends 'base-backend.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
<a href="{{ path('app_admin_carousel_index') }}" class="btn btn-orange btn-sm mb-2">Retour a la liste</a>
<div class="d-flex justify-content-between align-items-center">
<h1>Carousel</h1>
<a class="btn btn-brown" href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}">Modifiée</a>
</div>

    <table class="table">
        <tbody>
            <tr>
            <a href="{{ asset('images/carousel/' ~ carousel.imageName) }}" data-lightbox="{{ carousel.imageName }}"{% if carousel.titre is not null%} data-title="{{carousel.titre}}"{% endif %} >
                    <img src="{{ asset('images/carousel/' ~ carousel.imageName) }}" alt="{{ carousel.imageName }}" class="img-list"></a>
                </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.texte }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ carousel.rankNumber }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ carousel.tag }}</td>
            </tr>
            <tr>
                <th>Activée</th>
                <td>{{ carousel.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>



    {{ include('admin_carousel/_delete_form.html.twig') }}
{% endblock %}
