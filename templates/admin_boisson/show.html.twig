{% extends 'base-backend.html.twig' %}

{% block title %}Bouteille{% endblock %}

{% block body %}
<a href="{{ path('app_admin_boisson_index') }}" class="btn btn-orange btn-sm mb-2">Retour a la liste</a>
<div class="d-flex justify-content-between align-items-center">
<h1>Bouteille</h1>
<a class="btn btn-brown" href="{{ path('app_admin_boisson_edit', {'id': boisson.id}) }}">Modifiée</a>
</div>
    <table class="table">
        <tbody>
            <tr>
            <a href="{{ asset('images/boisson/' ~ boisson.imageName) }}" data-lightbox="{{ boisson.imageName }}"{% if boisson.nom is not null%} data-title="{{boisson.nom}}"{% endif %} >
                    <img src="{{ asset('images/boisson/' ~ boisson.imageName) }}" alt="{{ boisson.imageName }}" class="img-list"></a>
                </tr>
            <tr>
                <th>Nom</th>
                <td>{{ boisson.nom }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ boisson.taille }}</td>
            </tr>
            <tr>
                <th>Activée</th>
                <td>{{ boisson.IsActive ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ boisson.prix }}</td>
            </tr>
        </tbody>
    </table>


    {{ include('admin_boisson/_delete_form.html.twig') }}
{% endblock %}
