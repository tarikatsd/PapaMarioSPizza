<form method="post" action="{{ path('app_admin_contact_delete', {'id': contact.id}) }}" onsubmit="Etes vous sur de vouloir supprimer ce contact ?">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="btn btn-red"><i class="align-middle" data-feather="trash"></i></button>
</form>
