{% extends 'base-backend.html.twig' %}

{% block title %}
    Contact index
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">

        <h1>
            Contact index
        </h1>

    </div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>
                    Sujet
                </th>
                <th>
                    Message
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>
                        {{ contact.email }}
                    </td>
                    <td>
                        {{ contact.sujet }}
                    </td>
                    <td>
                        {{ contact.message }}
                    </td>
                    <td>
                        {% include "admin_contact/_delete_form.html.twig" %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">
                        Aucun message n'a été trouvé
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}
    