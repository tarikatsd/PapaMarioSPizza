{% extends 'base-backend.html.twig' %}

{% block title %}
    Promos
    
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>
            Promos 
                    
        </h1>
        <a href="{{ path('app_admin_promo_new') }}" class="btn btn-brown">
            Nouveau
                    
        </a>
    </div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Nom
                </th>
                <th>
                    Description
                </th>   
                <th>
                    Nombre Pizza
                </th>
                <th>
                    Nombre Extra
                </th>
                <th>
                    Nombre Bouteille
                </th>
                <th>
                    Nombre Dessert
                </th>
                <th>
                    Nombre Canette
                </th>
                <th>
                    Prix
                <th>
                    Activée
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for promo in promos %}
                <tr>
                    <td>
                        <a href="{{ asset('images/promo/' ~ promo.imageName) }}" data-lightbox="{{ promo.imageName }}" {% if promo.nom is not null %} data-title="{{ promo.nom }}" {% endif %}>
                            <img src="{{ asset('images/promo/' ~ promo.imageName) }}" alt="{{ promo.imageName }}" class="img-list"></a>
                        </td>
                        <td>
                            {{ promo.nom }}
                        </td>
                        <td>
                            {{ promo.description}}
                        <td>
                            {{ promo.pizzaQuantity }}
                        </td>
                        <td>
                            {{ promo.extraQuantity }}
                        </td>
                        <td>
                            {{ promo.boissonQuantity }}
                        </td>
                        <td>
                            {{ promo.canetteQuantity }}
                        </td>
                        <td>
                            {{ promo.dessertQuantity }}
                        </td> 
                        <td>
                            {{ promo.prix }}€
                            
                        </td>
                        <td>
                            {{ promo.isActive ? 'Oui' : 'Non' }}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_promo_show', {'id': promo.id}) }}" class="btn btn-orange">
                                <i class="align-middle" data-feather="eye"></i>
                            </a>
                            <a href="{{ path('app_admin_promo_edit', {'id': promo.id}) }}" class="btn btn-brown">
                                <i class="align-middle" data-feather="edit-2"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">
                            Aucune promo trouvée
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}
    