{% extends 'base-backend.html.twig' %}

{% block title %}
    Desserts
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>
            Desserts
        </h1>
        <a href="{{ path('app_admin_dessert_new') }}" class="btn btn-brown">
            Nouveau
        </a>
    </div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
            <th>Image</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>IsActive</th>
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dessert in desserts %}
            <tr>
                <td>
                    <a href="{{ asset('images/dessert/' ~ dessert.imageName) }}" data-lightbox="{{ dessert.imageName }}"{% if dessert.nom is not null%} data-title="{{dessert.nom}}"{% endif %} >
                    <img src="{{ asset('images/dessert/' ~ dessert.imageName) }}" alt="{{ dessert.imageName }}" class="img-list"></a>
                    </td>
                <td>{{ dessert.nom }}</td>
                <td>{{ dessert.prix }}</td>
                <td>{{ dessert.isActive ? 'Oui' : 'Non' }}</td>
                    <td>
                        <a href="{{ path('app_admin_dessert_show', {'id': dessert.id}) }}" class="btn btn-orange">
                    <i class="align-middle" data-feather="eye"></i>
                </a>
                <a href="{{ path('app_admin_dessert_edit', {'id': dessert.id}) }}" class="btn btn-brown">
            <i class="align-middle" data-feather="edit-2"></i>
        </a>
        
    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"class="text-start">Aucun dessert trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
